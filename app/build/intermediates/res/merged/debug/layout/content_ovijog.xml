<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sharna.krishokerpase.ovijog"
    tools:showIn="@layout/activity_ovijog"
    android:orientation="vertical"
    android:background="@drawable/bk2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"


        android:text="কৃষকের পাশে"
        android:textSize="30sp"
        android:textColor="#000"
        android:padding="3dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="35dp"/>
    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/prosno"
        android:text="কৃষি সংক্রান্ত যেকোনো রকম প্রশ্ন করতে নিম্নলিখিত বিভাগ থেকে নির্বাচন করুন"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:layout_marginTop="25dp"/>
    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/prosnosp"
        android:background="@drawable/drop"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:padding="15dp"
        >

    </Spinner>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:onClick="ovi"
        android:text="      অভিযোগ করুন"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/button_main2"
        android:padding="5dp"
        android:layout_marginTop="25dp"/>
    <Button
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:onClick="loan"
        android:text="   লোন নিতে ইচ্ছুক"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/button_main1"
        android:padding="5dp"
        android:layout_marginTop="25dp"/>



</LinearLayout>
