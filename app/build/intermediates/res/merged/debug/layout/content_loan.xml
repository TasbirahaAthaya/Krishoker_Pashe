<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc1">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sharna.krishokerpase.loan"
    tools:showIn="@layout/activity_loan"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"


        android:text="কৃষকের পাশে"
        android:textSize="35sp"
        android:textColor="#000"
        android:padding="3dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nবাংলাদেশ কৃষি ব্যাংক"
        android:textColor="#000"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/apture"
        android:id="@+id/p1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
       >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="নিয়মাবলী"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:onClick="dibo"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="যোগ্যতা"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:onClick="dekhbo"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="\nগ্রামীণ ব্যাংক"
        android:textColor="#000"
        android:textAlignment="center"
        android:padding="3dp"
        android:textStyle="bold"
        android:background="@drawable/apture"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="নিয়মাবলী"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:onClick="dibo"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="যোগ্যতা"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:onClick="dekhbo"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=" \nকর্মসংস্থান ব্যাংক"
        android:textAlignment="center"
        android:padding="3dp"
        android:textStyle="bold"
        android:background="@drawable/apture"
        android:textColor="#000"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="নিয়মাবলী"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:onClick="dibo"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="যোগ্যতা"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:onClick="dekhbo"/>

    </LinearLayout>


</LinearLayout>
    </ScrollView>
