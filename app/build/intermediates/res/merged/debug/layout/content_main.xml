<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sharna.navigation.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:background="@drawable/bck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"



        >

        <Button
            android:layout_width="1dp"
            android:layout_height="160dp"
            android:layout_weight="5"
            android:background="@drawable/taka"
            android:onClick="b1"
            android:text="\nফসলের দাম"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="1dp"
            android:layout_height="160dp"
            android:layout_weight="5"
            android:background="@drawable/tech"
            android:onClick="b2"
            android:text="\nনতুন প্রযুক্তি"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"



        >
        <Button
            android:layout_width="1dp"
            android:layout_height="160dp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:background="@drawable/stat"
            android:onClick="b3"
            android:text="\nসমাধান"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="1dp"
            android:layout_height="160dp"
            android:layout_weight="5"
            android:background="@drawable/ovijog"
            android:onClick="b4"



            android:text="\nসাহায্য নিন"


            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"/>


    </LinearLayout>
</LinearLayout>
