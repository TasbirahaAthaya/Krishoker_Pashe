<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sharna.krishokerpase.ovijog"
    tools:showIn="@layout/activity_ovijog"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prosno"
        android:text="Shomadhan"
        android:textSize="25sp"
        android:textColor="#000"
        android:background="@color/colorPrimary"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prosnosp">

    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ovijog"
        android:text="Porishongkhan"
        android:textSize="25sp"
        android:textColor="#000"
        android:background="@color/colorPrimary"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ovijogsp">

    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:visibility="invisible"
        android:text="Shomadhan List"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:dividerHeight="2dp"
        android:background="@color/colorPrimary"
        android:visibility="invisible">
    </ListView>



</LinearLayout>
